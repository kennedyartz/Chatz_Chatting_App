<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:paddingVertical="15dp"
    tools:context="Fikri.app.chatz.ViewProfileActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/view_profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile_img"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Name"
                android:visibility="gone"
                android:layout_marginTop="30dp"
                android:layout_below="@id/view_profile_image"
                android:textColor="@color/dominant2"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textCursorDrawable="@null"
                android:fontFamily="@font/poppins_medium"
                android:background="@null"
                android:enabled="false"
                android:padding="@dimen/padding_10_dp"
                android:layout_below="@id/name_tv"
                android:textColor="@color/dominant2"
                android:textStyle="bold"
                android:maxLines="1"
                android:gravity="center"
                android:id="@+id/view_username"
                android:textSize="26sp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/bio_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Bio"
                android:visibility="gone"
                android:layout_below="@id/view_username"
                android:textColor="@color/dominant2light"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/view_bio_et"
                android:enabled="false"
                android:fontFamily="@font/poppins_light"
                android:text=""
                android:hint="Hey there! I am Using Chatz. "
                android:layout_centerVertical="true"
                android:maxLength="60"
                android:minLines="4"
                android:maxLines="4"
                android:gravity="center|top"
                android:background="@drawable/shape_bio"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:layout_below="@id/bio_tv"
                android:layout_centerHorizontal="true"
                />


        </RelativeLayout>



    </android.support.v7.widget.CardView>


</RelativeLayout>