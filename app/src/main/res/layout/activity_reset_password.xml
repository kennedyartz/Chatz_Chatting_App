<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="60dp"
    android:layout_marginTop="60dp"
    android:layout_marginRight="60dp"
    android:layout_marginBottom="40dp"
    android:orientation="vertical"
    tools:context="Fikri.app.chatz.ResetPasswordActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/bar_layout"
        android:visibility="gone" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/resetpass" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="30dp"
        android:text="Reset Password"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:textColor="@color/dominant2"
        android:textSize="27dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/hint_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="By clicking RESET button, you will receive an email to reset your password"
        android:textAlignment="center"
        android:textColor="@color/grey2"
        android:layout_marginBottom="25dp"
        android:textSize="14dp"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_email"
        android:inputType="textEmailAddress"
        android:background="@drawable/shape_bio"
        android:textSize="16sp"
        android:textCursorDrawable="@drawable/text_cursor"
        android:hint="Your Email"
        android:textColorHint="@color/grey2"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingTop="2dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/dominant_shape"
        android:fontFamily="@font/poppins_medium"
        android:text="Reset"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>